/* pages/play-music/play-music.wxss */
.play-music {
  position: relative;
  overflow-y: hidden;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
.play-music .mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(15px);
  z-index: -1;
}
.play-music .bgc {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -2;
}
.play-music .header .tab-title {
  display: flex;
  font-size: 26rpx;
  color: #acacac;
}
.play-music .header .tab-title .item {
  padding: 0 8rpx;
}
.play-music .header .tab-title .divider:nth-last-of-type(1) {
  display: none;
}
.play-music .content {
  position: relative;
  width: 100%;
}
.play-music .content .swiper {
  width: 100%;
}
.play-music .content .swiper .music {
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
  padding: 0 60rpx;
  width: 100%;
  box-sizing: border-box;
  color: #fff;
}
.play-music .content .swiper .music .cover {
  width: 700rpx;
  height: 700rpx;
  border-radius: 350rpx;
  overflow: hidden;
}
.play-music .content .swiper .music .name {
  font-size: 46rpx;
  font-weight: bolder;
  align-self: flex-start;
}
.play-music .content .swiper .music .artist-name {
  font-size: 30rpx;
  align-self: flex-start;
}
.play-music .content .swiper .music .lyric {
  width: 600rpx;
  height: 40rpx;
  text-align: center;
  font-size: 30rpx;
  color: #19aabd;
  overflow-wrap: break-word !important;
  overflow: hidden;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.play-music .content .swiper .music .slider {
  width: 100%;
}
.play-music .content .swiper .music .time {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.play-music .content .swiper .music .time .start {
  font-size: 20rpx;
}
.play-music .content .swiper .music .time .end {
  font-size: 20rpx;
}
.play-music .content .swiper .music .controllers {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.play-music .content .swiper .music .controllers .mode {
  width: 52rpx;
  height: 52rpx;
}
.play-music .content .swiper .music .controllers .back {
  width: 96rpx;
  height: 96rpx;
}
.play-music .content .swiper .music .controllers .play {
  width: 136rpx;
  height: 136rpx;
}
.play-music .content .swiper .music .controllers .next {
  width: 96rpx;
  height: 96rpx;
}
.play-music .content .swiper .music .controllers .list {
  width: 52rpx;
  height: 52rpx;
}
.play-music .content .swiper .lyric {
  padding: 40rpx 0 0 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}
.play-music .content .swiper .lyric .lyric-text {
  overflow: visible !important;
  height: 85%;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  line-height: 68rpx;
}
.play-music .content .swiper .lyric .lyric-text .lyric-text-item {
  height: 68rpx;
}
.play-music .content .swiper .lyric .lyric-text .placeholder {
  display: block;
  height: 40%;
  width: 100%;
}
.play-music .play-list-title {
  height: 8vh;
  line-height: 8vh;
  text-align: center;
}
.play-music .play-list {
  padding-bottom: 2vh;
}
.active-tab {
  color: #fff !important;
}
.active-lyric {
  color: #19aabd !important;
}
.t-popup {
  height: 60vh !important;
}
