/* components/title-tab/title-tab.wxss */
.tab {
  padding: 50rpx 6rpx 40rpx 6rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.tab .title {
  font-size: 30rpx;
  font-weight: bold;
  letter-spacing: 3rpx;
  color: #333;
}
.tab .more {
  margin-right: 40rpx;
  position: relative;
  font-size: 22rpx;
  color: #888888;
}
.tab .more::after {
  content: "";
  display: block;
  width: 10rpx;
  height: 10rpx;
  border-right: 2rpx solid #888888;
  border-bottom: 2rpx solid #888888;
  transform: rotate(-45deg);
  position: absolute;
  top: 8rpx;
  right: -25rpx;
}
.hidden {
  display: none !important;
}
