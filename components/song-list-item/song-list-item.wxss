/* components/song-list-item/song-list-item.wxss */
.song-list-item {
  width: 310rpx;
  margin-bottom: 40rpx;
}
.song-list-item .top {
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
}
.song-list-item .top .play-count {
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 8rpx 10rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 21rpx;
  top: 267rpx;
  right: 0rpx;
}
.song-list-item .top .play-count .icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 6rpx;
}
.song-list-item .top .play-count .count {
  color: #fff;
  font-size: 20rpx;
}
.song-list-item .top .img {
  width: 310rpx;
  height: 310rpx;
}
.song-list-item .info {
  padding: 16rpx 4rpx 0 4rpx;
  height: 120rpx;
  font-size: 24rpx;
  background-color: #fff;
}
